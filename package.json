{
  "name": "ggs",
  "version": "1.0.0",
  "description": "Simple API to generate an army",
  "main": "index.ts",
  "scripts": {
    "dev": "lsof -ti:3000 | xargs kill && nodemon --files -r tsconfig-paths/register ./index.ts",
    "db-kill": "docker kill some-pg && docker rm some-pg",
    "db-start": "docker run --name some-pg -p 3008:5432 -e POSTGRES_PASSWORD=secret -d postgres",
    "db-restart": "docker restart some-pg",
    "db-console": "docker exec -it some-pg psql -U postgres",
    "prod": "nodemon build/index.js",
    "build": "tsc",
    "test": "node_modules/.bin/jest --watchAll --runInBand",
    "test-coverage": "node_modules/.bin/jest --watchAll --runInBand --coverage",
    "postbuild": "run test"
  },
  "keywords": [
    "express"
  ],
  "author": "Pietro Tamburrini",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.14.37",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^9.1.0",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.4",
    "@types/pino": "^6.3.11",
    "@types/validator": "^13.6.3",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.13.0",
    "express-pino-logger": "^6.0.0",
    "jest": "^27.2.1",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.6.5",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "pino": "^6.13.0",
    "redoc-express": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.2.1",
    "typeorm": "^0.2.37",
    "validator": "^13.6.0"
  }
}
